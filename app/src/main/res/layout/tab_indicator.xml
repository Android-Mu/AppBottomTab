<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:paddingBottom="2dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_user_flow_icon"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cb_icon_discover_normal"/>

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user_flow_icon"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/radio_text_bg"
        tools:text="发现" />

    <!-- 显示角标 -->
    <TextView
        android:id="@+id/tab_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/tab_title"
        android:layout_alignTop="@id/tab_title"
        android:layout_marginLeft="1dip"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>
